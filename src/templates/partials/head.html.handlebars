<script>
  function invert() {
    document.documentElement.style.setProperty('--base-background-lum', '10%');
    document.documentElement.style.setProperty('--base-foreground-lum', '90%');
    document.documentElement.style.setProperty('--code-invert', '100%');
  }

  const isDarkMode = localStorage.getItem('darkmode') === 'true';

  if (isDarkMode) {
    invert();

