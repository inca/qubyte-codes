<!doctype html>
<html lang="en">
<head>
  {{> head }}
</head>
<body>
  <header class="top-header">
      <h1><a href="/">Qubyte Codes</a></h1>
    <nav>
      <ul>
        <li><a href="/">archive</a></li>
        <li><a href="/about">about</a></li>
      </ul>
    </nav>
  </header>
  {{#posts}}
  <article>
    <header>
      <h2><a href="/blog/{{attributes.slug}}">{{attributes.title}}</a></h2>
      <time datetime="{{attributes.datetime}}">{{humanDate attributes.datetime}}</time>
      <span class="tags">{{#each attributes.tags}}<a href="/tags/{{this}}">#{{this}}</a> {{/each}}</span>
    </header>
    <div class="quote">{{{attributes.snippet}}}</div>
  </article>
  {{/posts}}
  <footer>
    {{> copyright }}
  </footer>
</body>
</html>
